<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hisl.wow.toon.WebActivity"
    tools:showIn="@layout/activity_main">

    <ScrollView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:scrollbars="none"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout"
            android:layout_above="@+id/adView">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:text="네이버 웹툰"
                    android:id="@+id/b1"
                    android:background="@drawable/btn_bg_1"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:padding="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="20dp"/>

                <Button
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:text="네이트 웹툰"
                    android:id="@+id/b3"
                    android:background="@drawable/btn_bg_3"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:padding="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="20dp"/>

                <Button
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:text="티스토어 웹툰"
                    android:id="@+id/b5"
                    android:background="@drawable/btn_bg_5"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:padding="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="20dp"/>

                <Button
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:text="탑툰"
                    android:id="@+id/b7"
                    android:background="@drawable/btn_bg_7"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:padding="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="20dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/d"
                    android:background="#00000000"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:text="다음 웹툰"
                    android:id="@+id/b2"
                    android:background="@drawable/btn_bg_2"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:padding="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="20dp"/>

                <Button
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:text="올레마켓 웹툰"
                    android:id="@+id/b4"
                    android:background="@drawable/btn_bg_4"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:padding="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="20dp"/>

                <Button
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:text="레진코믹스"
                    android:id="@+id/b6"
                    android:background="@drawable/btn_bg_6"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:padding="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="20dp"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
